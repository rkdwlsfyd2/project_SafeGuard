<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.civilcomplaint.mapper.UserMapper">
    
    <resultMap id="userResultMap" type="AppUser">
        <id property="userNo" column="user_no"/>
        <result property="email" column="email"/>
        <result property="pw" column="pw"/>
        <result property="name" column="name"/>
        <result property="role" column="role"/>
        <result property="phone" column="phone"/>
        <result property="addr" column="addr"/>
        <result property="birthDate" column="birth_date"/>
        <result property="createdDate" column="created_date"/>
        <result property="agencyNo" column="agency_no"/>
    </resultMap>
    
    <select id="findByUserNo" resultMap="userResultMap">
        SELECT * FROM app_user WHERE user_no = #{userNo}
    </select>
    
    <select id="findByEmail" resultMap="userResultMap">
        SELECT * FROM app_user WHERE email = #{email}
    </select>
    
    <select id="existsByEmail" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM app_user WHERE email = #{email})
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="userNo" keyColumn="user_no">
        INSERT INTO app_user (email, pw, name, role, phone, addr, birth_date, created_date, agency_no)
        VALUES (#{email}, #{pw}, #{name}, #{role}, #{phone}, #{addr}, #{birthDate}, NOW(), #{agencyNo})
    </insert>
    
    <update id="update">
        UPDATE app_user SET 
            email = #{email},
            pw = #{pw},
            name = #{name},
            role = #{role},
            phone = #{phone},
            addr = #{addr},
            birth_date = #{birthDate},
            agency_no = #{agencyNo}
        WHERE user_no = #{userNo}
    </update>
    
    <delete id="delete">
        DELETE FROM app_user WHERE user_no = #{userNo}
    </delete>
    
</mapper>

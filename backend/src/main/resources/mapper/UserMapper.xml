<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.safeguard.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.safeguard.dto.UserDTO">
        <id property="userNo" column="user_no"/>
        <result property="userId" column="user_id"/>
        <result property="pw" column="pw"/>
        <result property="name" column="name"/>
        <result property="birthDate" column="birth_date"/>
        <result property="addr" column="addr"/>
        <result property="phone" column="phone"/>
        <result property="createdDate" column="created_date"/>
        <result property="role" column="role"/>
        <result property="agencyNo" column="agency_no"/>
    </resultMap>

    <!-- 회원 생성 (main 기준) -->
    <insert id="insertUser"
            parameterType="com.safeguard.dto.UserDTO"
            useGeneratedKeys="true"
            keyProperty="userNo"
            keyColumn="user_no">
        INSERT INTO app_user (
            user_id,
            pw,
            name,
            birth_date,
            addr,
            phone,
            role,
            agency_no,
            created_date
        )
        VALUES (
            #{userId},
            #{pw},
            #{name},
            #{birthDate},
            #{addr},
            #{phone},
            #{role},
            #{agencyNo},
            NOW()
        )
    </insert>

    <!-- 비밀번호 변경 -->
    <update id="updateUserPassword">
        UPDATE app_user
        SET pw = #{password}
        WHERE user_id = #{userId}
    </update>

    <!-- 단건 조회 (PK) -->
    <select id="selectUserByUserNo" resultMap="UserResultMap">
        SELECT *
        FROM app_user
        WHERE user_no = #{userNo}
    </select>

    <!-- 단건 조회 (ID) -->
    <select id="findByUserId" resultMap="UserResultMap" parameterType="string">
        SELECT *
        FROM app_user
        WHERE user_id = #{userId}
    </select>

    <!-- ID 중복 여부 -->
    <select id="existsByUserId" resultType="boolean">
        SELECT EXISTS (
            SELECT 1
            FROM app_user
            WHERE user_id = #{userId}
        )
    </select>

    <!-- 이름 + 전화번호로 조회 (아이디 찾기) -->
    <select id="selectUserByNameAndPhone" resultMap="UserResultMap">
        SELECT *
        FROM app_user
        WHERE name = #{name}
          AND phone = #{phone}
    </select>

    <!-- 아이디 + 전화번호로 조회 (비밀번호 찾기) -->
    <select id="selectUserByUserIdAndPhone" resultMap="UserResultMap">
        SELECT *
        FROM app_user
        WHERE user_id = #{userId}
          AND phone = #{phone}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="updateUser">
        UPDATE app_user
        SET
            name = #{name},
            birth_date = #{birthDate},
            addr = #{addr},
            phone = #{phone},
            role = #{role},
            agency_no = #{agencyNo}
        WHERE user_no = #{userNo}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteUserByUserNo">
        DELETE
        FROM app_user
        WHERE user_no = #{userNo}
    </delete>

</mapper>
